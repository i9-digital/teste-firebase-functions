{
    "openapi": "3.0.0",
    "info": {
        "title": "API Principal of SuperFrete",
        "description": "API developed for SuperFrete - Test",
        "termsOfService": "http://localhost:8080/{passar rota}",
        "contact": {
            "email": "carlosfelipeti@outlook.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/",
            "description": ""
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "summary": "User registration",
                "description": "This route registers a new user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Carlos Felipe"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                      "description": "Bad Request"
                    },
                    "502": {
                      "description": "Bad Gateway"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    }
}